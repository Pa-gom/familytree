<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp"
                 >
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/img_head_default_man"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_name"
                            android:text="姓名:"
                    />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_sex"
                        android:layout_marginTop="4dp"
                        android:text="性别:"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#aaaaaa"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                >
            <TextView
                    android:id="@+id/btn_add_father"
                    style="@style/edit_tree_menu_item"
                    android:text="添加父亲"
                    />
            <TextView
                    android:id="@+id/btn_add_mother"
                    style="@style/edit_tree_menu_item"
                    android:text="添加母亲"
            />
            <TextView
                    android:id="@+id/btn_add_brother"
                    style="@style/edit_tree_menu_item"
                    android:text="添加兄弟"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                >
            <TextView
                    android:id="@+id/btn_add_spouse"
                    style="@style/edit_tree_menu_item"
                    android:text="添加夫妻"
            />
            <TextView
                    android:id="@+id/btn_add_son"
                    style="@style/edit_tree_menu_item"
                    android:text="添加儿子"
            />
            <TextView
                    android:id="@+id/btn_add_daughter"
                    style="@style/edit_tree_menu_item"
                    android:text="添加女儿"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@color/blue"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            >
            <TextView
                    android:id="@+id/btn_watch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_text_white_border_only_right"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="查看"
                    />
        <TextView
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_text_white_border_only_right"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="编辑"
        />
        <TextView
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="删除"
        />
    </LinearLayout>
</LinearLayout>